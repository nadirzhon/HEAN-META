# HEAN Trading Bot - Configuration for Fixes
# Copy this to .env and adjust values

# ==================== POSITION MONITOR (NEW) ====================
# Automatically force-close positions older than this (seconds)
MAX_HOLD_SECONDS=900  # 15 minutes (default)

# How often to check for stale positions (seconds)
POSITION_MONITOR_CHECK_INTERVAL=30  # 30 seconds (default)

# Enable automatic force-closing of stale positions
POSITION_MONITOR_ENABLED=true

# ==================== CAPITAL ALLOCATION (NEW) ====================
# Force equal capital allocation regardless of performance
# - true: Each strategy gets exactly 1/N of capital (e.g., 33.33% for 3 strategies)
# - false: Adaptive allocation based on Profit Factor and drawdown (default)
FORCE_EQUAL_ALLOCATION=false

# ==================== EXISTING SETTINGS ====================
# Trading Mode
TRADING_MODE=paper  # paper or live
DRY_RUN=true  # true for simulation, false for real trading
LIVE_CONFIRM=NO  # Must be YES for live trading

# Initial Capital
INITIAL_CAPITAL=300.0

# Strategy Configuration
FUNDING_HARVESTER_ENABLED=true
BASIS_ARBITRAGE_ENABLED=true
IMPULSE_ENGINE_ENABLED=true

# Risk Management
MAX_DAILY_DRAWDOWN_PCT=15.0
MAX_TRADE_RISK_PCT=2.0
MAX_OPEN_POSITIONS=10
MAX_OPEN_ORDERS=20

# ==================== QUICK START EXAMPLES ====================

# Example 1: Conservative Setup (long hold time, equal allocation)
# MAX_HOLD_SECONDS=1800  # 30 minutes
# POSITION_MONITOR_CHECK_INTERVAL=60  # 1 minute
# FORCE_EQUAL_ALLOCATION=true

# Example 2: Aggressive Setup (short hold time, adaptive allocation)
# MAX_HOLD_SECONDS=600  # 10 minutes
# POSITION_MONITOR_CHECK_INTERVAL=30  # 30 seconds
# FORCE_EQUAL_ALLOCATION=false

# Example 3: Testing Setup (very short hold time for testing)
# MAX_HOLD_SECONDS=120  # 2 minutes
# POSITION_MONITOR_CHECK_INTERVAL=10  # 10 seconds
# FORCE_EQUAL_ALLOCATION=true
