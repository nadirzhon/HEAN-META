# HEAN-META Production Environment Configuration
# Generated by smoke test and production preparation

# =============================================================================
# BYBIT API CONFIGURATION
# =============================================================================
# For production, use mainnet credentials
# IMPORTANT: Never commit real API keys to git!
BYBIT_TESTNET=true
BYBIT_API_KEY=your-api-key-here
BYBIT_API_SECRET=your-api-secret-here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL for Docker environment (service name "redis")
REDIS_URL=redis://redis:6379/0

# For local development without Docker, use:
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading mode: "paper" or "live"
# WARNING: Set to "live" only when ready for real trading!
TRADING_MODE=paper

# Live trading confirmation (must be "YES" to enable live trading)
# LIVE_CONFIRM=YES

# Trading symbols (comma-separated)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# Initial capital in USDT
INITIAL_CAPITAL=10000

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================
# Enable/disable trading strategies
FUNDING_HARVESTER_ENABLED=true
BASIS_ARBITRAGE_ENABLED=true
IMPULSE_ENGINE_ENABLED=true

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum daily drawdown percentage (e.g., 5.0 = 5%)
MAX_DAILY_DRAWDOWN_PCT=5.0

# Maximum risk per trade percentage
MAX_TRADE_RISK_PCT=1.0

# Position size limits
MAX_POSITION_SIZE=1000

# =============================================================================
# PROFIT CAPTURE (AFO-Director)
# =============================================================================
# Enable profit capture system
PROFIT_CAPTURE_ENABLED=false

# Target percentage growth to trigger (default: 20%)
PROFIT_CAPTURE_TARGET_PCT=20

# Trail percentage drawdown to trigger (default: 10%)
PROFIT_CAPTURE_TRAIL_PCT=10

# Capture mode: "full" (close all) or "partial" (reduce exposure)
PROFIT_CAPTURE_MODE=full

# Action after capture: "pause" (stop trading) or "continue" (with reduced risk)
PROFIT_CAPTURE_AFTER_ACTION=pause

# Risk multiplier when continuing after capture (e.g., 0.25 = 25%)
PROFIT_CAPTURE_CONTINUE_RISK_MULT=0.25

# =============================================================================
# MULTI-SYMBOL CONFIGURATION
# =============================================================================
# Enable multi-symbol scanning
MULTI_SYMBOL_ENABLED=false

# Symbols to scan (comma-separated, max 10 recommended)
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,XRPUSDT,BNBUSDT,ADAUSDT,DOGEUSDT,AVAXUSDT,LINKUSDT,TONUSDT

# =============================================================================
# AI CATALYST (Agent Generation & Auto-Improvement)
# =============================================================================
# Optional: Google Gemini API key for AI features
# GEMINI_API_KEY=your-gemini-api-key-here

# Optional: OpenAI API key
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: Anthropic API key
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# PROCESS FACTORY (Experimental)
# =============================================================================
# Enable Process Factory
PROCESS_FACTORY_ENABLED=false

# Allow Process Factory to execute Bybit actions
# WARNING: Only enable if you understand the implications!
PROCESS_FACTORY_ALLOW_ACTIONS=false

# =============================================================================
# PYTHON CONFIGURATION
# =============================================================================
PYTHONUNBUFFERED=1
PYTHONPATH=/app/src
TZ=UTC

# =============================================================================
# LOGGING & OBSERVABILITY
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured logging
STRUCTURED_LOGGING=true

# =============================================================================
# FRONTEND (UI) CONFIGURATION
# =============================================================================
# API base URL for frontend (relative path in Docker)
VITE_API_BASE=/api

# WebSocket URL for frontend
VITE_WS_URL=/ws

# =============================================================================
# NOTES
# =============================================================================
# 1. For production deployment:
#    - Set BYBIT_TESTNET=false
#    - Use real API credentials
#    - Set TRADING_MODE=live and LIVE_CONFIRM=YES only when ready
#    - Enable appropriate strategies
#    - Configure risk limits carefully
#
# 2. For development:
#    - Use TRADING_MODE=paper
#    - Can use testnet or paper trading mode
#    - Set REDIS_URL=redis://localhost:6379/0 for local Redis
#
# 3. Security:
#    - NEVER commit this file with real credentials to git
#    - Use environment-specific .env files
#    - Rotate API keys regularly
#    - Use read-only API keys when possible
