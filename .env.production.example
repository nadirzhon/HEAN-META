# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# ВАЖНО: Скопируйте этот файл в .env.production и заполните реальными значениями
# НИКОГДА не коммитьте файлы с реальными ключами в Git!

# ========================================
# ENVIRONMENT
# ========================================
ENVIRONMENT=production
TZ=UTC

# ========================================
# BYBIT API (LIVE TRADING)
# ========================================
# ОСТОРОЖНО: Это для реальной торговли!
BYBIT_TESTNET=false
BYBIT_API_KEY=your-live-api-key-here
BYBIT_API_SECRET=your-live-api-secret-here

# ========================================
# TRADING CONFIGURATION
# ========================================
TRADING_MODE=live
DRY_RUN=false
LIVE_CONFIRM=YES

# Trading symbols (comma-separated)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# Strategies
FUNDING_HARVESTER_ENABLED=true
BASIS_ARBITRAGE_ENABLED=true
IMPULSE_ENGINE_ENABLED=true

# ========================================
# AI API KEYS
# ========================================
# OpenAI API Key
OPENAI_API_KEY=sk-proj-your-key-here

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Google Gemini API Key
GEMINI_API_KEY=AIzaSy-your-key-here

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password-here
REDIS_DB=0

# ========================================
# SECURITY
# ========================================
# Secret key for sessions (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# ========================================
# MONITORING
# ========================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your-grafana-password-here

# ========================================
# DOCKER/KUBERNETES
# ========================================
DOCKER_REGISTRY=ghcr.io/yourorg
VERSION=2.0.0
