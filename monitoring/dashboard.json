{
  "dashboard": {
    "title": "HEAN Trading System",
    "tags": ["trading", "crypto"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "hean_health_score",
            "legendFormat": "Health Score"
          },
          {
            "expr": "hean_actions_enabled",
            "legendFormat": "Actions Enabled"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 2,
        "title": "Equity & Drawdown",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "hean_equity",
            "legendFormat": "Equity"
          },
          {
            "expr": "hean_drawdown_pct",
            "legendFormat": "Drawdown %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 3,
        "title": "PnL Breakdown",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "hean_realized_pnl",
            "legendFormat": "Realized PnL"
          },
          {
            "expr": "hean_unrealized_pnl",
            "legendFormat": "Unrealized PnL"
          },
          {
            "expr": "hean_fees",
            "legendFormat": "Fees"
          },
          {
            "expr": "hean_funding",
            "legendFormat": "Funding"
          },
          {
            "expr": "hean_rewards",
            "legendFormat": "Rewards"
          },
          {
            "expr": "hean_opp_cost",
            "legendFormat": "Opp Cost"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 4,
        "title": "Execution Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "hean_order_rejects",
            "legendFormat": "Order Rejects"
          },
          {
            "expr": "hean_slippage_bps",
            "legendFormat": "Slippage (bps)"
          },
          {
            "expr": "hean_maker_taker_ratio",
            "legendFormat": "Maker/Taker Ratio"
          },
          {
            "expr": "hean_api_latency_ms",
            "legendFormat": "API Latency (ms)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Safety Metrics",
        "type": "stat",
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "hean_profit_illusion_flag",
            "legendFormat": "Profit Illusion"
          },
          {
            "expr": "hean_snapshot_staleness_seconds",
            "legendFormat": "Snapshot Staleness (s)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ]
  }
}

